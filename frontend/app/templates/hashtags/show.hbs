<div class='row'>
  <h2 class='category-header'>{{title}}</h2>
{{#if controllers.session.currentUser.authenticated}}
  {{#if subscribed}}
    <a href="#" class="unsubscribe" {{action 'unsubscribe' id}}>Unsubscribe</a>
  {{else}}
    <a href="#" class="subscribe" {{action 'subscribe' id}}>Subscribe</a>
  {{/if}}
{{/if}}

</div>

{{#each topStories}}
  <div class='article'>
    {{#if editable}}
      {{#if favorited}}
        <a href="#" {{action 'unfavorite' id}}>{{fa-icon "star"}}</a>
      {{else}}
        <a href="#" {{action 'favorite' id}}>{{fa-icon "star-o"}}</a>
      {{/if}}
    {{/if}}
    <h2>{{title}}</h2>
    <p>{{{body}}}</p>
    <small>published {{date-and-time published_at}}</small>
  </div>
  <br>
{{/each}}

{{#if showAllStories}}
  {{#each allStories}}
    <div class='article'>
      {{#if editable}}
        {{#if favorited}}
          <a href="#" {{action 'unfavorite' id}}>{{fa-icon "star"}}</a>
        {{else}}
          <a href="#" {{action 'favorite' id}}>{{fa-icon "star-o"}}</a>
        {{/if}}
      {{/if}}
      <h2>{{title}}</h2>
      <p>{{{body}}}</p>
      <small>published {{date-and-time published_at}}</small>
    </div>
    <br>
  {{/each}}
{{/if}}

{{#if showMoreButton}}
  <div class="overflow">
    <a href="#" {{action 'loadAll'}} class='load-button'>More Stories</a>
  </div>
{{/if}}

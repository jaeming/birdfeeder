<div class="row">
    {{#each pagedContent}}
      <div class='article'>
        <h2>
          {{title}}
          {{#link-to 'hashtags.show' hashtag.id}}<small class='hashtag-subtitle'>{{hashtag.title}}</small>{{/link-to}}
        </h2>
        <p>{{{body}}}</p>
        <small>published {{date-and-time published_at}}</small>
      </div>
      <br>
    {{/each}}
  <div class="overflow">
    <a href="#" {{action 'loadNext'}} class='load-button'>More Stories</a>
  </div>
</div>
